model User {
  id          String    @id @default(cuid())
  email       String    @unique
  password    String
  role        Role      @default(USER)
  documents   Document[]
}

model Document {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  content     Json
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  author      User     @relation(fields: [authorId], references: [id])
  authorId    String
}

enum Role {
  USER
  ADMIN
}